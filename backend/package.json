{
  "name": "tremulator-backend",
  "version": "1.0.0",
  "description": "REST API server for Tremulator",
  "main": "./build/index.js",
  "scripts": {
    "start": "export configuration=\"dev\" && npm run generate && tsc-watch --onSuccess 'nodemon ./build/index.js'",
    "serve": "npm run generate && tsc-watch --onSuccess 'nodemon ./build/index.js'",
    "build": "npm run generate && tsc",
    "generate": "npm run generate:routes && npm run generate:spec",
    "generate:spec": "tsoa spec",
    "generate:routes": "tsoa routes",
    "lint": "eslint --ext .ts ./src"
  },
  "author": "OuestWare",
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.0",
    "lodash": "^4.17.20",
    "node-cache": "^5.1.2",
    "swagger-ui-express": "^4.1.5",
    "tsoa": "^3.4.0",
    "typescript-ioc": "^3.2.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.14",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  }
}
