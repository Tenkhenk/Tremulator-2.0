{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*.ts"],
  "spec": {
    "outputDirectory": "build",
    "basePath": "/api/v1",
    "specVersion": 3,
    "securityDefinitions": {
      "auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "specMerging": "recursive",
    "spec": {
      "paths": {
        "/collections/{collectionId}/images": {
          "post": {
            "parameters": [
              {
                "in": "path",
                "name": "collectionId",
                "required": true,
                "schema": {
                  "format": "double",
                  "type": "number"
                }
              }
            ],
            "requestBody": {
              "required": true,
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "file": {
                        "type": "string",
                        "format": "binary"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "basePath": "/api/v1",
    "authenticationModule": "./src/authentication.ts"
  }
}
